modules = ["nodejs-20", "java-graalvm22.3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && java -jar backend/target/health-office-backend-0.0.1-SNAPSHOT.jar"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["java", "-jar", "backend/target/health-office-backend-0.0.1-SNAPSHOT.jar"]
build = ["bash", "-c", "cd /home/runner/workspace && flutter build web --release --base-href '/' && rm -rf backend/src/main/resources/static && mkdir -p backend/src/main/resources/static && cp -r build/web/* backend/src/main/resources/static/ && cd backend && mvn package -DskipTests -q"]
